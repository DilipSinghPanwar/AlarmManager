<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etInputTimeInSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="Enter Second"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnAlarmStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="45dp"
        android:text="SET ALARM IN SECONDS"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etInputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="Enter Minutes"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/btnRepeatingAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="45dp"
        android:text="SET REPEATING ALARM/SPECIFIC TIME"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="Enter number of second"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/btnAccToDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="45dp"
        android:text="SET ALARM WITH DATE AND TIME"
        android:textColor="@android:color/white" />

</LinearLayout>